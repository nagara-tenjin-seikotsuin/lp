---
import Layout from "@/layouts/Layout.astro";
import { Picture } from "astro:assets";
import Map from "@/components/Map.astro";
import Cv from "@/components/Cv.astro";
import ElfsightReviews from "@/components/ElfsightReviews.astro";

export const prerender = false;

const locals = Astro.locals;
const variant = locals.ab;
---

<Layout>
  <div class="max-w-[750px] mx-auto">
    <section class="bg-[#DDE6E5]">
      <Picture
        src={import("@/assets/fv.svg")}
        formats={["avif", "webp"]}
        alt="fv"
      />
      <div class="px-4 py-6">
        <Cv />
      </div>
    </section>
    <section>
      <Picture
        src={import("@/assets/solution.svg")}
        formats={["avif", "webp"]}
        alt="solution"
      />
    </section>
    <section>
      <Picture
        src={import("@/assets/customer.svg")}
        formats={["avif", "webp"]}
        alt="customer"
      />
      <div class="px-4 py-6">
        <ElfsightReviews />
      </div>
    </section>
    <section>
      <Picture
        src={import("@/assets/evidence.svg")}
        formats={["avif", "webp"]}
        alt="evidence"
      />
      <div class="px-4 py-6">
        <Cv />
      </div>
    </section>
    <section>
      <Picture
        src={import("@/assets/check.svg")}
        formats={["avif", "webp"]}
        alt="check"
      />
      <div class="px-4 py-6">
        <Cv />
      </div>
    </section>
    <section>
      <Picture
        src={import("@/assets/faq.svg")}
        formats={["avif", "webp"]}
        alt="faq"
      />
    </section>
    <section>
      <Picture
        src={import("@/assets/access.svg")}
        formats={["avif", "webp"]}
        alt="access"
      />
      <Map />
    </section>
  </div>
</Layout>
